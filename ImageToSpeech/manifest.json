{
  "manifest_version": 2,

  "name": "Image to Speech Extension",
  "description": "This extension analyze an image and translate it into speech",
  "version": "1.0",
  "permissions": [
    "contextMenus"
  ],
  "content_scripts": [
    {
      "matches": ["http://*/*"],
      "js": ["jquery-3.1.1.min.js", "imagetospeech.js"]
    }
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "imagetospeech.html"
  }
}
